# Auth0 Configuration
NEXT_PUBLIC_AUTH0_DOMAIN=your-auth0-domain.us.auth0.com
NEXT_PUBLIC_AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_SECRET=use-openssl-rand-hex-32-to-generate
AUTH0_BASE_URL=http://localhost:3000
AUTH0_ISSUER_BASE_URL=https://your-auth0-domain.us.auth0.com
AUTH0_AUDIENCE=https://your-auth0-api-identifier

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Netlify Auth0 Configuration
NETLIFY_AUTH0_DOMAIN=your-auth0-domain.us.auth0.com
NETLIFY_AUTH0_CLIENT_ID=your-auth0-client-id
NETLIFY_AUTH0_CLIENT_SECRET=your-auth0-client-secret
NETLIFY_AUTH0_CALLBACK=https://your-site.netlify.app/.netlify/functions/auth/callback
NETLIFY_AUTH0_AFTER_LOGOUT_URL=https://your-site.netlify.app

# Session
SESSION_COOKIE_SECRET=use-openssl-rand-hex-32-to-generate

# GitHub (Never store in repository - use environment variables)
# GITHUB_TOKEN=your-github-token

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Database Configuration
# DATABASE_URL=your_database_connection_string

# Session Configuration
SESSION_COOKIE_LIFETIME=7200 # 2 hours in seconds

# Set to true to use Auth0, false to use mock authentication
USE_AUTH0=true

# For React applications, prefix with REACT_APP_
REACT_APP_AUTH0_DOMAIN='your-auth0-domain.auth0.com'
REACT_APP_AUTH0_CLIENT_ID='your-auth0-client-id'
REACT_APP_AUTH0_REDIRECT_URI='http://localhost:3000/callback'
REACT_APP_AUTH0_AUDIENCE='https://your-auth0-audience-identifier'
REACT_APP_AUTH0_SCOPE='openid profile email'

# Netlify specific environment variables
NETLIFY_AUTH0_DOMAIN='your-auth0-domain.auth0.com'
NETLIFY_AUTH0_CLIENT_ID='your-auth0-client-id'
NETLIFY_AUTH0_CLIENT_SECRET='your-auth0-client-secret'
NETLIFY_AUTH0_CALLBACK='https://your-netlify-site.netlify.app/.netlify/functions/callback'
NETLIFY_AUTH0_AFTER_LOGOUT_URL='https://your-netlify-site.netlify.app/' 